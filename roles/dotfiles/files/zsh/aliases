# Ansible
alias a='ansible'
alias ap='ansible-playbook'

# rm with prompt
alias rm='rm -i'

# ls
alias ls='pwd; ls -GF'
alias ls.='pwd; ls -aGF'
alias ll='pwd; ls -lGFh'
alias ll.='pwd; ls -alGFh'

# grep
alias grep='grep --color=auto'

# bc without welcome message and with math lib support
alias bc='bc -lq'

# colorful tree
alias t='tree -C -I "bundle|tmp|node_modules"'
alias td='tree -C -d' # directories only

# bundler
alias b='bundle exec'
alias bi='bundle install'
alias bcl='bundle clean'

alias v='vim'
alias v.='vim .'
alias j='jobs'

# rails commands shortcuts
alias brs='bundle exec rails s -b 0.0.0.0'
alias pbrs='SHOW_PROFILER=1 brs'
alias brc='bundle exec rails c'
alias brm='bundle exec rake db:migrate'
alias br='bundle exec rails'

# chrome-cli
alias ch='chrome-cli'
alias cho='chrome-cli open'
alias chi='chrome-cli info'

# tmux
alias tx='tmux'
alias txn='tmux new -s'
alias txl='tmux ls'
alias txa='tmux attach -t'

# use gnu date instead of date
alias date='gdate'

# node & npm
alias n='node'
alias ni='npm install'
alias nis='npm install --save'
alias nisd='npm install --save-dev'
alias np='npm prune'
alias nr='npm run'
alias nt='npm test'

# yarn
alias y='yarn'
alias yr='yarn run'
alias yt='yarn test'

# Docker and docker-compose
alias dc='docker-compose'
alias dcr='docker-compose run'
alias dcb='docker-compose build'
alias dcd='docker-compose down'
