[push]
  default = current

[color]
  ui = auto

[alias]
  a = add
  aa = add --all
  ap = add --patch

  b = branch
  bm = branch --merged
  bd = branch --delete

  ca = commit --amend
  ci = commit -v
  cim = commit -m

  co = checkout
  cb = checkout -b

  di = diff --color-moved
  dc = diff --cached --color-moved

  l = pull

  lg = log --oneline --decorate --graph
  lgm = log --oneline --decorate --graph master..
  lgd = log --oneline --decorate --graph develop..

  m = merge

  p = push
  pf = push --force-with-lease

  r = rebase
  ra = rebase --abort
  rc = rebase --continue
  ri = rebase --interactive

  re = reset

  st = status
  s = status -s

  t = tag

  ignore = update-index --assume-unchanged
  unignore = update-index --no-assume-unchanged
  ignored = !git ls-files -v | grep "^[[:lower:]]"

[core]
  excludesfile = ~/.gitignore
  autocrlf = input

[commit]
  template = ~/.gitmessage

[fetch]
  prune = true

[filter "media"]
  clean = git media clean %f
  smudge = git media smudge %f
  required = true
