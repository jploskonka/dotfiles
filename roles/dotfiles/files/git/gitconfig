  email = ploskonkajakub@gmail.com

[push]
  default = current

[color]
  ui = auto

[alias]
  aa = add --all
  ap = add --patch

  b = branch
  bm = branch --merged
  bd = branch --delete

  ca = commit --amend
  ci = commit -v
  cim = commit -m

  co = checkout
  cb = checkout -b

  di = diff
  dc = diff --cached

  l = pull

  lg = log --oneline --decorate --graph
  lgm = log --oneline --decorate --graph master..
  lgd = log --oneline --decorate --graph develop..

  p = push
  pf = push --force-with-lease

  r = rebase
  ra = rebase --abort
  rc = rebase --continue
  ri = rebase --interactive

  re = reset

  st = status
  s = status -s

  t = tag

[core]
  excludesfile = ~/.gitignore
  autocrlf = input

[difftool]
  prompt = false
[diff]
  tool = Kaleidoscope
[difftool "Kaleidoscope"]
  cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[merge]
  tool = Kaleidoscope
[mergetool "Kaleidoscope"]
  cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
  trustExitCode = true

[commit]
  template = ~/.gitmessage

[fetch]
  prune = true

[filter "media"]
	clean = git media clean %f
	smudge = git media smudge %f
	required = true
